type Author @key(fields: "id") {
  id: ID!
  name: String!
  writings(skip: Int, limit: Int): [Writing!]!
}

extend type Query {
  author(id: ID!): Author!
  allAuthors: [Author!]!
}

input CreateAuthorInput {
  name: String!
}

extend type Mutation {
  createAuthor(data: CreateAuthorInput!): Author!
}
